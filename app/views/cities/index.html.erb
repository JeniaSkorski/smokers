
<h1><%= t 'views.city.index.listing_cities' %></h1>

<table>
  <tr>
    <th><%= City.human_attribute_name(:name) %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= link_to I18n.t('views.show'), city %></td>
    <td><%= link_to I18n.t('views.edit'), edit_city_path(city) %></td>
    <td><%= link_to I18n.t('views.destroy'), city, confirm: I18n.t('views.are_you_sure'), method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

