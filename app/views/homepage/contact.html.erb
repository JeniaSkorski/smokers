	<form role="form">
		<fieldset>
			<%= form_tag url_for(:action => 'deliver_mail'), :method => 'get' do %>
			<div class="form-group">

				<%= text_area_tag 'message', "Message"   %>
			</div>
			<div class="form-group">

				<%= email_field_tag 'address', "Email address" %>
			</div>
			<div class="form-group">
				<%= text_field_tag 'name', "Name"   %>
			</div>
			<div class="form-group">
				<%= submit_tag "Send", :class => "btn btn-info" %>

			</div>
			<% end %>
		</fieldset>
	</form>
</div>

