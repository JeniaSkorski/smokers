


<h1>Listing places</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Category</th>
      <th>Name</th>
      <th>Address</th>
      <th>Details</th>
      <th>h_Name</th>
      <th>h_Address</th>
      <th>h_Details</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Website</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.city_id %></td>
        <td><%= place.categories.map(&:name).join(', ') %></td>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.details %></td>
        <td><%= place.h_name %></td>
        <td><%= place.h_address %></td>
        <td><%= place.h_details %></td>
        <td><%= place.latitude %></td>
        <td><%= place.longitude %></td>
        <td><%= place.website %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

