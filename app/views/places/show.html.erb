<div id="map-canvas" data-name="<%= @place.name.to_json%>" data-website="<%= @place.website.to_json%>" data-lat="<%= @place.latitude.to_json%>" data-lng="<%= @place.longitude.to_json%>"
data-address= "<%= @place.address.to_json %>"
></div>

<script>initialize_place();</script>
<div class="places_column" >
	<div class="well well-sm ">
		<p>
			<% if I18n.locale == :en %>
			<h3><%= @place.name %></h3>
			<%end%>
			<% if I18n.locale == :he %>
			<h3><%= @place.h_name %></h3>
			<%end%>
		</p>
		<p>
			<% if I18n.locale == :en %>
			<%= @place.categories.map(&:name).join(', ') %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.categories.map(&:h_name).join(', ') %>
			<%end%>

		</p>

		<p>
			<% if I18n.locale == :en %>
			<%= @place.address %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.h_address %>
			<%end%>

		</p>
		<p>
			<% if I18n.locale == :en %>
			<%= @place.details %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.h_details %>
			<%end%>

		</p>

		<a href="<%= @place.website %>"> visit website </a>

		</p>

	</div>

	<% if I18n.locale == :en %>
	<h3>Nearby Places</h3>
	<%end%>
	<% if I18n.locale == :he %>
	<h3>מקומות באזור</h3>
	<%end%>

	<ul>
		<%for place in @place.nearbys(0.5)%>
		<li>
			<% if I18n.locale == :en %>
			<%= link_to place.name, place%> (<%= (place.distance * 1609.34).round(2)%> m)
			<%end%>
			<% if I18n.locale == :he %>
			<%= link_to place.h_name, place%> (<%= (place.distance * 1609.34).round(2)%> מטרים)
			<%end%>

		</li>
		<%end%>
	</ul>

