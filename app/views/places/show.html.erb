<div id="map-canvas" data-name="<%= @place.name.to_json%>" data-website="<%= @place.website.to_json%>" data-lat="<%= @place.latitude.to_json%>" data-lng="<%= @place.longitude.to_json%>"
data-address= "<%= @place.address.to_json %>"
></div>

<script>initialize_place();</script>
<div class="places_column" >
	<div class="well well-sm ">
		<p>
			</br>

			</br>
			</br>
			</br>
			</br>
			</br>
			<% if I18n.locale == :en %>
			<div class="pub-name">
				<%= @place.name.gsub('-',' ') %>
			</div>
			<%end%>
			<% if I18n.locale == :he %>
			<div class="pub-name">
				<%= @place.h_name.gsub('-',' ') %>
			</div>
			<%end%>
		</p>
		<p>
			<% if I18n.locale == :en %>
			<%= @place.categories.map(&:name).join(', ') %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.categories.map(&:h_name).join(', ') %>
			<%end%>

		</p>

		<p>
			<% if I18n.locale == :en %>
			<%= @place.address %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.h_address %>
			<%end%>

		</p>
		<p>
			<% if I18n.locale == :en %>
			<%= @place.details %>
			<%end%>
			<% if I18n.locale == :he %>
			<%= @place.h_details %>
			<%end%>

		</p>

		<a href="<%= @place.website %>"> visit website </a>

		</p>
		<div>
			<%= t('Average rating') %>	

			<div id="star"></div>
		</div>
		
		
		<div>
			<% if current_user %>
			<%= t('Rate this place') %>
			
			<%else%>
			<%= t('Log in to rate') %>
			<%end%>
			
			<div id="user_star"></div>
		</div>
	</div>

	<% if I18n.locale == :en %>
	<h3>Nearby Places</h3>
	<%end%>
	<% if I18n.locale == :he %>
	<h3>מקומות באזור</h3>
	<%end%>

	<ul>
		<%for place in @place.nearbys(0.5)%>
		<li>
			<% if I18n.locale == :en %>
			<%= link_to place.name.gsub('-',' '), place%> (<%= (place.distance * 1609.34).round(2)%> m)
			<%end%>
			<% if I18n.locale == :he %>
			<%= link_to place.h_name.gsub('-',' '), place%> (<%= (place.distance * 1609.34).round(2)%> מטרים)
			<%end%>

		</li>
		<%end%>
	</ul>

	<h3>Directions To Place TBD</h3>

	<% string = "http://noSmokingPlaces.com/" + @place.id.to_s + "/comments" %>

	<div class="fb-comments" data-href=<%= string %> data-numposts="5" data-colorscheme="light"></div>
</div>

<script>
		jQuery(document).ready(function(){

	$('#star').raty({
	readOnly: true,
	start: <%= @place.average_rating %>
		, path: '/assets'
		});
		});
</script>

<% if @rating %>
<script>
		jQuery(document).ready(function(){

	$('#user_star').raty({
	start: <%= @rating.score %>,
	path: '/assets',
	click: function(score, evt) {
	$.ajax({
	url: '/ratings/' + <%= @rating.id %>
			, type: 'PATCH',
	data: { score:score,place_id: <%= @place.id %>
		}
		});
		}
		});
		});
</script>
<% end %>
