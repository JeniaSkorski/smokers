		<script type="text/javascript">
			google.maps.event.addDomListener(window, 'load', initialize);
		</script>
		<%= csrf_meta_tags %>
	</head>
	<body class="<%= params[:controller]%> main-container" >

		<div id="fb-root"></div>
		
