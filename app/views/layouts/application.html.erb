<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content= "width=device-width">
		<link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic' rel='stylesheet' type='text/css'>
		<title>Smoke-free-places</title>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<!--facebook comments-->
		<div id="fb-root"></div>
		<script>
			( function(d, s, id) {
					var js, fjs = d.getElementsByTagName(s)[0];
					if (d.getElementById(id))
						return;
					js = d.createElement(s);
					js.id = id;
					js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId=644565478915600";
					fjs.parentNode.insertBefore(js, fjs);
				}(document, 'script', 'facebook-jssdk'));
		</script>
		<script type="text/javascript"
		src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB0tRRnJiXtigILUpFRCcHQch3oKQiO10s&sensor=false"></script>

		<script type="text/javascript">
			google.maps.event.addDomListener(window, 'load', initialize);
		</script>
		<%= csrf_meta_tags %>
	</head>
	<body class="<%= params[:controller]%> main-container" >

		<div id="fb-root"></div>
		
		<!--English nav-->
		<% if I18n.locale == :en %>
		<nav class="navbar navbar-default" role="navigation">
			 <div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				
			<ul>
				<a id="map-btn" class="visible-xs btn btn-default" href="/">map</a>
				<a id="list-btn" class="visible-xs btn btn-default" href="/">list</a>
			</ul>
			
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					<a class="navbar-brand" href="/">Home</a>
					<li >
						<%= link_to(t('About'),{:controller => 'static_pages', :action => 'about'} )%>
					</li>
					<li >
						<%= link_to(t('News'),{:controller => 'static_pages', :action => 'news'} )%>

					</li>
					<li>
						<%= link_to(t('Events'),{:controller => 'static_pages', :action => 'events'} )%>
					</li>

					<li>
						<a data-toggle="modal" data-target="#contact"> Contact Us </a>
					</li>
					

					<li id= "facebook_button">

						<div class="addthis_toolbox addthis_32x32_style addthis_default_style">
							<a class="addthis_button_facebook_follow" addthis:userid="NonSmokingPlaces"></a>

						</div>
						<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52bb37753e186b7d"></script>
						<!-- AddThis Follow END -->
					</li>

				</ul>

				<ul class="nav navbar-nav navbar-right">
					<% if current_user %>
					<li class="dropdown">
				        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
				        <ul class="dropdown-menu">
				        <li><a data-toggle="modal" data-target="#recommend"> <%= t('recommend a place') %> </a></li>
				        <li class="divider"></li>
				        <li><%= link_to t('Log Out'), logout_path %></li>
				        </ul>
				      </li>
					<% else %>
					<li>	<a data-toggle="modal" data-target="#sign-up"> <%= t('Sign up') %></a>
					
					</li>
					<li>
						<a data-toggle="modal" data-target="#log-in"> <%= t('log in') %> </a>

						<% end %>
					</li>
					<% if I18n.locale == :he %>
					<li>
						<%= link_to_unless I18n.locale == :en, "English", locale: :en %>
					</li>
					<% end %>
					<% if I18n.locale == :en %>
					<li>
						<%= link_to_unless I18n.locale == :he, "עברית", locale: :he %>
					</li>
					<% end %>

				</ul>
			</div><!-- /.navbar-collapse -->
			</div>
		</nav>
		<%end%>
		
		<!--Hebrew nav-->
		<% if I18n.locale == :he %>
		<nav class="navbar navbar-default" role="navigation">
			 <div class="container-fluid">
				<!-- Brand and toggle get grouped for better mobile display -->
				
			<ul>
				<a id="h-map-btn" class="visible-xs btn btn-default" href="/">מפה</a>
				<a id="h-list-btn" class="visible-xs btn btn-default" href="/">רשימה</a>
			</ul>
			<!-- Collect the nav links, forms, and other content for toggling -->
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav navbar-right">
					<li>
						<a data-toggle="modal" data-target="#h-contact"> צרו קשר</a>
					</li>
					

					<li id= "facebook_button">

						<div class="addthis_toolbox addthis_32x32_style addthis_default_style">
							<a class="addthis_button_facebook_follow" addthis:userid="NonSmokingPlaces"></a>

						</div>
						<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-52bb37753e186b7d"></script>
						<!-- AddThis Follow END -->
					</li>

					<li>
						<%= link_to(t('Events'),{:controller => 'static_pages', :action => 'events'} )%>
					</li>
					
					<li >
						<%= link_to(t('News'),{:controller => 'static_pages', :action => 'news'} )%>

					</li>
					<li >
						<%= link_to(t('About'),{:controller => 'static_pages', :action => 'about'} )%>
					</li>
					<a class="navbar-brand" href="/he">ראשי</a>
					
				</ul>

				<ul class="nav navbar-nav">
					<% if I18n.locale == :he %>
					<li>
						<%= link_to_unless I18n.locale == :en, "English", locale: :en %>
					</li>
					<% end %>
					<% if I18n.locale == :en %>
					<li>
						<%= link_to_unless I18n.locale == :he, "עברית", locale: :he %>
					</li>
					<% end %>
					<% if current_user %>
					<li class="dropdown">
				        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b></a>
				        <ul class="dropdown-menu">
				        <li><a data-toggle="modal" data-target="#h-recommend"> <%= t('recommend a place') %> </a></li>
				        <li class="divider"></li>
				        <li><%= link_to t('Log Out'), logout_path %></li>
				        </ul>
				      </li>
					<% else %>
					<li>	<a data-toggle="modal" data-target="#h-sign-up"> <%= t('Sign up') %></a>
					
					</li>
					<li>
						<a data-toggle="modal" data-target="#h-log-in"> <%= t('Log in') %> </a>

						<% end %>
					</li>
					

				</ul>
			</div><!-- /.navbar-collapse -->
			</div>
		</nav>
		<%end%>
		<%= yield %>
		<%= render 'shared/sign_up_form' %>
		<%= render 'shared/log_in_form' %>
		<%= render 'shared/contact_form' %>
		<%= render 'shared/recommend_form' %>

	</body>
</html>
