					<li>
						<%= link_to_unless I18n.locale == :en, "English", locale: :en %>
					</li>
					<% end %>
					<% if I18n.locale == :en %>
					<li>
						<%= link_to_unless I18n.locale == :he, "עברית", locale: :he %>
					</li>
					<% end %>

				</ul>
			</div><!-- /.navbar-collapse -->
			</div>
		</nav>
